<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="724dp"
    android:layout_height="35dp"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />


    <TextView
        android:id="@+id/textview_list_row_rm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/PinkBlack_medium"/>

    <TextView
        android:id="@+id/textview_list_row_los"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/PinkBlack_medium"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/textview_list_row_amb"
        style="@style/PinkBlack_medium"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textview_list_row_distance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.6"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/PinkBlack_medium"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/textview_list_row_speed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/PinkBlack_medium" />

    <TextView
        android:id="@+id/textview_list_row_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.6"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/PinkBlack_medium"/>

</LinearLayout>



